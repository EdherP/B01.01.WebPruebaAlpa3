
@using Web_ALPA.Data
@model List<DRIVIN_Listar_Clientes_Result>

<html>
    <body>

        <div>
            <table class="table table-striped table-hover" id="kt_table2">

                <thead>
                    <tr role="row">
                        <th class="text-dark">#</th>
                        <th class="text-dark">Código</th>
                        <th class="text-dark">Cliente</th>
                        <th class="text-dark">Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        for (int i = 0; i < Model.Count; i++)
                        {
                            string @Code = Model[i].customer_code;
                            <tr>
                                <td>
                                    @Html.HiddenFor(x => Model[i].Nro)
                                    @Html.DisplayFor(x => Model[i].Nro, Model[i].Nro)
                                </td>

                                <td>
                                    @Html.HiddenFor(x => Model[i].customer_code)
                                    @Html.DisplayFor(x => Model[i].customer_code, Model[i].customer_code)
                                </td>

                                <td>
                                    @Html.HiddenFor(x => Model[i].customer_name)
                                    @Html.DisplayFor(x => Model[i].customer_name, Model[i].customer_name)
                                </td>

                                <td>
                                    @Html.HiddenFor(x => Model[i].Estado)
                                    @Html.DisplayFor(x => Model[i].Estado, Model[i].Estado)
                                </td>
                                                              
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </body>
</html>

