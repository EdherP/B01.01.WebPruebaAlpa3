@using Web_ALPA.Models.Entidad
@model List<CeldaUbicacion>

<html>
<body>
    <div>
        @*<fieldset id="SubmitFormT">*@
        <table class="table table-striped- table-bordered table-hover" id="kt_table_1T">
            <thead>
                <tr>
                    <th><center>#</center></th>
                    <th><div class="size4">Ubicación</div></th>
                    <th><div class="size5">Columna</div></th>
                    <th><div class="size5">Nivel</div></th>
                    <th class="text-light">
                        <center>
                            @Html.CheckBox("CheckAll", false, new { id = "select_all" })
                        </center>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(x => Model[i].Linea)
                                @Html.DisplayFor(x => Model[i].Linea, Model[i].Linea)
                            </td>
                            <td>
                                @Html.HiddenFor(x => Model[i].CodigoDeCelda)
                                @Html.DisplayFor(x => Model[i].CodigoDeCelda, Model[i].CodigoDeCelda)
                            </td>
                            <td>
                                @Html.HiddenFor(x => Model[i].IDColumna)
                                @Html.DisplayFor(x => Model[i].IDColumna, Model[i].IDColumna)
                            </td>
                            <td>
                                @Html.HiddenFor(x => Model[i].IDNivel)
                                @Html.DisplayFor(x => Model[i].IDNivel, Model[i].IDNivel)
                            </td>
                            <td class="text-dark">
                                <center>
                                    @Html.CheckBoxFor(x => Model[i].CheckLinea, new { @class = "kt-checkbox kt-checkbox--brand", id = "Checkbox1" + Model[i].CodigoDeCelda })
                                </center>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        @*</fieldset>*@
    </div>
    <script src="~/assets/app/custom/general/components/datatables/MyTable/Table_Scrollable_V7.js"></script>
    <script src="~/Scripts/General/CheckAll.js"></script>
</body>
</html>

